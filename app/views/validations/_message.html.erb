<% case validation_status @user, attr %>
<% when :valid %>
  <small class="text-success">Great job! <%= attr.to_s.titleize %> is valid.</small>
<% when :invalid %>
  <small class="text-danger"><%= @user.errors.messages[attr].map { |m| "#{attr.to_s.titleize} #{m}" }.join ", " %></small>
<% else %>
  <small class="opacity-40">Please enter a value for <%= attr.to_s.titleize %>.</small>
<% end %>
