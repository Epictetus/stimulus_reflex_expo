<!DOCTYPE html>
<html>
  <head>
    <title>StimulusReflexExpo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "/globals/navbar" %>

    <div class="container-fluid">
      <div class="row">
        <div class="col-3 col-md-2 py-4 bg-light border-right">
          <%= render "/globals/sidenav" %>
        </div>
        <div class="col-9 col-md-10 py-4 pl-4">
          <%= yield %>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <footer class="border-top p-3 mb-5">
            <small class="float-right text-muted opacity-50 ml-3">Session ID: <%= session.id %></small>
            <small class="float-right text-muted">&copy; 2019 Nathan Hopkins, All Rights Reserved</small>
          </footer>
        </div>
      </div>
    </div>
  </body>
</html>
