<!DOCTYPE html>
<html>
  <head>
    <title>StimulusReflexExpo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "/globals/navbar" %>

    <div class="flex md:flex-row flex-wrap h-screen">
      <div class="w-1/6 bg-blue-100 border-r border-blue-200 p-4 text-left text-gray-700 shadow-inner">
        <%= render "/globals/sidenav" %>
      </div>

      <div class="w-5/6 bg-white p-6 text-gray-700 shadow-inner">
        <%= yield %>
      </div>
    </div>

  </body>
</html>
