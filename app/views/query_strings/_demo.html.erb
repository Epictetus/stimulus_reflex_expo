<div class="form-row mb-4">
  <div class="col-6">
    <%= label_tag "Category" %>
    <%= select_tag "Category",
            options_for_select(@categories, @category),
            include_blank: true,
            class: "form-control",
            data: { controller: "query-string",
                    action: "change->query-string#filter",
                    reflex_root: "#search-results" } %>
  </div>
</div>

<div id="search-results">
  <table class="table table-striped table-bordered">
    <thead class="bg-primary">
      <tr>
        <th style="width:25%" class="text-white">Name</th>
        <th style="width:25%" class="text-white">Stars </th>
        <th style="width:25%" class="text-white">Price</th>
        <th style="width:25%" class="text-white">Category</th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= "â˜…" * restaurant.stars %></td>
          <td><%= "$" * restaurant.price %></td>
          <td><%= restaurant.category %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
